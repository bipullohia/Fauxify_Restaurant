<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bipullohia.fauxifyrestaurant">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PasscodeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="singleTop"/>

        <activity
            android:name=".PendingOrderDetails"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".DeliveredOrderDetails"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".AddDishIntoCategory">
        </activity>

        <activity android:name=".ModifyDishIntoCategory">
        </activity>


        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>